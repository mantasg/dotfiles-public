[global]
    ### Display ###
    monitor = 0
    follow = mouse
    geometry = "0x5-10+30"
    indicate_hidden = yes
    shrink = yes
    transparency = 5
    notification_height = 0
    separator_height = 2
    idle_threshold = 120

    # Padding between text and separator.
    padding = 5
    horizontal_padding = 20
    frame_width = 2
    frame_color = "#FFFFFF"
    sort = yes

    ### Text ###
    font = Monospace 8
    line_height = 2
    markup = full
    alignment = left
    show_age_threshold = 60
    word_wrap = yes
    ellipsize = middle
    ignore_newline = no
    stack_duplicates = true
    hide_duplicate_count = false
    show_indicators = yes

    ### History ###
    sticky_history = yes
    history_length = 20

    ### Misc/Advanced ###
    # dmenu path.
    dmenu = /usr/bin/dmenu -p dunst:
    # Browser for opening urls in context menu.
    browser = /usr/bin/firefox -new-tab
    # Always run rule-defined scripts, even if the notification is suppressed
    always_run_script = true
    title = Dunst
    class = Dunst
    startup_notification = false

[shortcuts]
    # Close notification.
    close = ctrl+space
    # Close all notifications.
    close_all = ctrl+shift+space
    # Redisplay last message(s).
    history = ctrl+[
    context = ctrl+shift+period

[urgency_low]
    background = "#222222"
    foreground = "#888888"
    timeout = 10

[urgency_normal]
    background = "#285577"
    foreground = "#ffffff"
    timeout = 10

[urgency_critical]
    background = "#900000"
    foreground = "#ffffff"
    frame_color = "#ff0000"
    timeout = 0